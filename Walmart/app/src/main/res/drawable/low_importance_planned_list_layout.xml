<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">



    <item>
        <shape
            android:shape="rectangle">
            <corners android:radius="10dp"/>
            <gradient
                android:angle="315"
                android:startColor="@color/darker_pinkish_yellow"
                android:endColor="@color/light_yellow"
                android:centerColor="@color/darker_pinkish_yellow"
                android:centerY="1%"
                android:centerX="24%"/>

            <size android:height="180dp"
                android:width="300dp"/>
        </shape>
    </item>



</layer-list>



