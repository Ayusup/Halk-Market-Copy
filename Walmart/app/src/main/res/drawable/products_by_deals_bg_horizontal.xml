<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">


            <size
                android:width="200dp"
                android:height="200dp"/>
        </shape>
    </item>

    <item

        android:right="100dp">
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="16dp"
                android:bottomLeftRadius="16dp"/>
            <gradient
                android:angle="180"
                android:type="linear"
                android:startColor="@color/white_solid"
                android:centerColor="@color/white_solid"
                android:endColor="@color/lighter_white_solid"
                android:centerY=".4"
                android:centerX=".96"/>
            <size
                android:width="100dp"
                android:height="100dp"/>
        </shape>
    </item>

    <item

        android:left="100dp">
        <shape android:shape="rectangle">
            <corners android:bottomRightRadius="16dp"
                android:topRightRadius="16dp"/>
            <gradient
                android:angle="0"
                android:type="linear"
                android:startColor="@color/white_solid"
                android:centerColor="@color/white_solid"
                android:endColor="@color/lighter_white_solid"
                android:centerY=".4"
                android:centerX=".96"/>
            <size
                android:width="100dp"
                android:height="100dp"/>
        </shape>
    </item>

</layer-list>