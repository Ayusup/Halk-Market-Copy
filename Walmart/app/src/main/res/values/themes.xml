    <style name="Walmart_theme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/white</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="colorAccent">#13265C</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowBackground">@color/lighter_white_solid</item>
    </style>

    <style name="see_all_theme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="colorAccent">#13265C</item>
    </style>

    <style name="categories_products_theme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="colorAccent">#13265C</item>
    </style>

    <style name="Calendar_style" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">#2FAA5F</item>
    </style>


    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/color_Accent</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabIndicatorAnimationMode">fade</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="tabTextAppearance">@style/MyTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/color_Accent</item>
    </style>

    <style name="MyTabTextAppearance" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">@dimen/tab_layout_text_size</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="Walmart_theme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="colorAccent">#13265C</item>
    </style>

    <style name="Walmart_theme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Walmart_theme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Floating_Action_Button_Theme" parent="Widget.Design.FloatingActionButton">
        <item name="android:background">@color/red</item>
    </style>

</resources>