<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/product_in_wishlist"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:elevation="6dp"
    android:gravity="center"
    android:layout_marginVertical="10dp"
    android:layout_marginHorizontal="10dp"
    android:background="@drawable/cardview_bg">

    <LinearLayout
        android:id="@+id/product_wishlist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="12dp">

        <ImageView
            android:id="@+id/product_Image_wishlist"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:padding="6dp"
            android:src="@drawable/gatorade" />

        <RelativeLayout
            android:layout_width="118dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/product_name_wishlist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gatorade"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textColor="@color/color_Accent"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/product_in_stock_wishlist"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="In stock"
                    android:textColor="@color/green_cart_color"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/price_for_piece_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/price_for_piece_height"
                    android:layout_marginBottom="@dimen/price_for_piece_margin"
                    android:text="price for pc"
                    android:textColor="@color/price_for_pc_text_color"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/product_price_wishlist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="60.00 TMT"
                    android:textColor="@color/color_Accent"
                    android:textSize="12sp" />


            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="108dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/product_delete_wishlist"
                android:layout_width="50dp"
                android:layout_height="26dp"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                android:text="Delete"
                android:textColor="@color/green_cart_color"
                android:textSize="11sp" />


            <RelativeLayout
                android:layout_width="104dp"
                android:layout_height="44dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true">

                <TextView
                    android:id="@+id/add_to_cart_wishlist"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/add_to_cart_btn_wishlist_layout"
                    android:gravity="center"
                    android:text="@string/add_to_cart"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/add_and_take_layout_wishlist"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/product_take_wislist"
                        android:layout_width="30dp"
                        android:layout_height="44dp"
                        android:src="@drawable/take_in_cart_layout" />

                    <TextView
                        android:id="@+id/product_pieces_wishlist"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:gravity="center"
                        android:text="1 pc"
                        android:textColor="@color/color_Accent"
                        android:textSize="11sp" />

                    <ImageView
                        android:id="@+id/product_add_wishlist"
                        android:layout_width="30dp"
                        android:layout_height="44dp"
                        android:src="@drawable/add_in_cart_layout" />

                </LinearLayout>

            </RelativeLayout>




        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
