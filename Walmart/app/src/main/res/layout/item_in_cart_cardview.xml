<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/product_in_cart"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:elevation="6dp"
    android:layout_marginVertical="10dp"
    android:layout_marginHorizontal="10dp"
    android:background="@drawable/cardview_bg">

    <LinearLayout
        android:id="@+id/product_cart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="12dp">

        <ImageView
            android:id="@+id/product_Image_cart"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:padding="6dp"
            android:src="@drawable/gatorade" />

        <RelativeLayout
            android:layout_width="118dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/product_name_cart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gatorade"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textColor="@color/color_Accent"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/product_in_stock_cart"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="In stock"
                    android:textColor="@color/green_cart_color"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/price_for_piece_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/price_for_piece_height"
                    android:layout_marginBottom="@dimen/price_for_piece_margin"
                    android:text="price for pc"
                    android:textColor="@color/price_for_pc_text_color"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/product_price_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="60.00 TMT"
                    android:textColor="@color/color_Accent"
                    android:textSize="12sp" />


            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="106dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/product_delete_cart"
                android:layout_width="50dp"
                android:layout_height="26dp"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                android:text="Delete"
                android:textColor="@color/green_cart_color"
                android:textSize="11sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:background="@drawable/cardview_bg"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/product_take_cart"
                    android:layout_width="30dp"
                    android:layout_height="44dp"
                    android:src="@drawable/take_in_cart_layout" />

                <TextView
                    android:id="@+id/product_pieces_cart"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:gravity="center"
                    android:text="1 pc"
                    android:textColor="@color/color_Accent"
                    android:textSize="11sp" />

                <ImageView
                    android:id="@+id/product_add_cart"
                    android:layout_width="30dp"
                    android:layout_height="44dp"
                    android:src="@drawable/add_in_cart_layout" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/total_amount_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/product_total_price_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="60.00 TMT"
                    android:textColor="@color/color_Accent"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
