<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activities.SignUpActivity"
    android:background="@color/lighter_white_solid">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="10dp"
        app:layout_constraintVertical_chainStyle="spread_inside">

        <LinearLayout
            android:id="@+id/tv_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="14dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteX="10dp">

            <ImageView
                android:id="@+id/sign_up_activity_back_btn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/back_btn_ic" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-thin"
                android:gravity="center"
                android:text="Registration"
                android:textColor="@color/color_Accent"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="6dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_register"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:text="First Name"
                android:textSize="14sp" />

            <RelativeLayout
                android:id="@+id/first_name_et_lay"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@drawable/registration_edit_text_bg_gray"
                android:elevation="4dp">

                <ImageView
                    android:id="@+id/first_name_ic"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="12dp"
                    android:background="@drawable/avatar_gray" />

                <EditText
                    android:id="@+id/first_name_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="44dp"
                    android:layout_marginEnd="44dp"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:inputType="text"
                    android:textColor="#363A43"
                    android:textColorHint="#7A8089"
                    android:textSize="20sp" />

            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="6dp"
            app:layout_constraintTop_toBottomOf="@+id/ll_first_name">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:text="Last Name"
                android:textColor="@color/gray"
                android:textSize="14sp" />

            <RelativeLayout
                android:id="@+id/last_name_et_lay"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@drawable/registration_edit_text_bg_gray"
                android:elevation="4dp">

                <ImageView
                    android:id="@+id/last_name_ic"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="12dp"
                    android:background="@drawable/avatar_gray" />

                <EditText
                    android:id="@+id/last_name_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="44dp"
                    android:layout_marginEnd="44dp"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:inputType="text"
                    android:textColor="#363A43"
                    android:textColorHint="#7A8089"
                    android:textSize="20sp" />

            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="6dp"
            app:layout_constraintTop_toBottomOf="@+id/ll_last_name">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:text="Num (+993)"
                android:textSize="14sp" />

            <RelativeLayout
                android:id="@+id/num_et_lay"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@drawable/registration_edit_text_bg_gray"
                android:elevation="4dp">

                <ImageView
                    android:id="@+id/num_ic"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="12dp"
                    android:background="@drawable/phone_gray" />

                <EditText
                    android:id="@+id/num_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="44dp"
                    android:layout_marginEnd="44dp"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:inputType="phone"
                    android:text="+993"
                    android:textColor="#363A43"
                    android:textColorHint="#7A8089"
                    android:textSize="20sp" />

            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="6dp"
            app:layout_constraintTop_toBottomOf="@+id/ll_number">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:text="City"
                android:textSize="14sp" />

            <RelativeLayout
                android:id="@+id/city_et_lay"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@drawable/registration_edit_text_bg_gray"
                android:elevation="4dp">

                <ImageView
                    android:id="@+id/city_ic"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="12dp"
                    android:background="@drawable/location_gray" />

                <EditText
                    android:id="@+id/city_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="44dp"
                    android:layout_marginEnd="44dp"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:inputType="text"
                    android:textColor="#363A43"
                    android:textColorHint="#7A8089"
                    android:textSize="20sp" />

            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_adress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="6dp"
            app:layout_constraintTop_toBottomOf="@+id/ll_city">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:text="Adress"
                android:textSize="14sp" />

            <RelativeLayout
                android:id="@+id/address_et_lay"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@drawable/registration_edit_text_bg_gray"
                android:elevation="4dp">

                <ImageView
                    android:id="@+id/address_ic"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="12dp"
                    android:background="@drawable/navigation_gray" />

                <EditText
                    android:id="@+id/address_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="44dp"
                    android:layout_marginEnd="44dp"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:inputType="text"
                    android:textColor="#363A43"
                    android:textColorHint="#7A8089"
                    android:textSize="20sp" />

            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="6dp"
            app:layout_constraintTop_toBottomOf="@+id/ll_adress">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:text="Password"
                android:textSize="14sp" />

            <RelativeLayout
                android:id="@+id/password_et_lay"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@drawable/registration_edit_text_bg_gray"
                android:elevation="4dp">

                <ImageView
                    android:id="@+id/password_ic"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="12dp"
                    android:background="@drawable/lock_gray" />

                <EditText
                    android:id="@+id/sign_up_activity_password_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="44dp"
                    android:layout_marginEnd="44dp"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:inputType="textPassword"
                    android:textColor="#363A43"
                    android:textColorHint="#7A8089"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/sign_up_activity_hidden_ic"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/password_hide" />

            </RelativeLayout>


        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_registration"
            android:layout_width="150dp"
            android:layout_height="54dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll_password">


            <RelativeLayout
                android:layout_width="150dp"
                android:layout_height="54dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center">

                <TextView
                    android:id="@+id/register_btn"
                    android:layout_width="140dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@drawable/add_to_cart_btn_wishlist_layout"
                    android:elevation="4dp"
                    android:fontFamily="sans-serif-light"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="Registration"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <include
                    android:id="@+id/load_register"
                    layout="@layout/item_loading_dialog"
                    android:layout_centerInParent="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"/>


            </RelativeLayout>

        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>



</RelativeLayout>