<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/wishlist_btn"
    android:layout_width="52dp"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"

    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:weightSum="1">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_gravity="top"
        android:gravity="center">

        <ImageView
            android:id="@+id/ic_wishlist_view"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_wishlist" />

        <TextView
            android:id="@+id/items_in_wishlist"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="top|end"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="6dp"
            android:background="@drawable/number_above_wishlist_btn"
            android:gravity="center"
            android:text="1"
            android:textSize="11sp"
            android:textColor="@color/white"
            android:visibility="gone" />

    </FrameLayout>

    <TextView
        android:id="@+id/wishlist_btn_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/nav_bar_Wishlist"
        android:fontFamily="@font/montserrat_medium"
        android:textColor="@color/black"
        android:textSize="@dimen/tab_layout_text_size" />

