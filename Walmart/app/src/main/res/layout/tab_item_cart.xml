<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cart_btn"
    android:layout_width="42dp"
    android:layout_height="match_parent"
    android:paddingBottom="2dp"
    android:layout_gravity="center_horizontal"
    android:gravity="center"
    android:orientation="vertical">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_gravity="top"
        android:gravity="center">

        <ImageView
            android:id="@+id/ic_cart_view"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_cart" />

        <TextView
            android:id="@+id/items_in_cart"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="top|end"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="1dp"
            android:background="@drawable/number_above_cart"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="11sp"
            android:visibility="gone" />

    </FrameLayout>

    <TextView
        android:id="@+id/cart_btn_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight=".1"
        android:gravity="center_horizontal"
        android:text="@string/nav_bar_Cart"
        android:fontFamily="@font/montserrat_medium"
        android:textColor="@color/black"
        android:textSize="@dimen/tab_layout_text_size" />


    <!--    <ImageView-->
    <!--        android:id="@+id/cart_btn_selected"-->
    <!--        android:layout_width="26dp"-->
    <!--        android:layout_height="8dp"-->
    <!--        android:layout_gravity="center_horizontal"-->
    <!--        android:layout_weight=".1"-->
    <!--        android:background="@drawable/bottom_bar_item_selected"-->
    <!--        android:visibility="invisible" />-->

</LinearLayout>



