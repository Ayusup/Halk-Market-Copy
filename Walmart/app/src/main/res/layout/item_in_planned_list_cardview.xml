<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/product_in_planned_list"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:elevation="6dp"
    android:gravity="center"
    android:layout_marginVertical="10dp"
    android:layout_marginHorizontal="10dp"
    android:background="@drawable/cardview_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="12dp">

        <ImageView
            android:id="@+id/product_Image_planned_list"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:padding="6dp"
            android:src="@drawable/gatorade" />

        <RelativeLayout
            android:layout_width="118dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/product_name_planned_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gatorade"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textColor="@color/color_Accent"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/product_in_stock_planned_list"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="In stock"
                    android:textColor="@color/green_cart_color"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/price_for_piece_planned_list_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/price_for_piece_height"
                    android:layout_marginBottom="@dimen/price_for_piece_margin"
                    android:text="price for pc"
                    android:textColor="@color/price_for_pc_text_color"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/product_price_planned_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="60.00 TMT"
                    android:textColor="@color/color_Accent"
                    android:textSize="12sp" />


            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="108dp"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/item_in_planned_list_bg"
                android:layout_marginStart="2dp">

                <ImageView
                    android:id="@+id/product_for_cart"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_green_check" />

                <View
                    android:id="@+id/check_mask"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:layout_margin="3dp"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/product_delete_planned_list"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/item_in_planned_list_cardview_delete_ic_bg"
                android:elevation="4dp"
                android:padding="4dp"
                android:layout_marginEnd="2dp"
                android:layout_alignParentEnd="true">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/item_in_planned_list_cardview_delete_ic" />

            </RelativeLayout>



            <RelativeLayout
                android:layout_width="104dp"
                android:layout_height="44dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true">


                <LinearLayout
                    android:id="@+id/add_and_take_layout_wishlist"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/product_take_planned_list"
                        android:layout_width="30dp"
                        android:layout_height="44dp"
                        android:src="@drawable/take_in_cart_layout"
                        android:elevation="4dp"/>

                    <TextView
                        android:id="@+id/product_pieces_planned_list"
                        android:layout_width="44dp"
                        android:layout_height="41dp"
                        android:gravity="center"
                        android:text="1 pc"
                        android:textColor="@color/color_Accent"
                        android:textSize="11sp"
                        android:elevation="4dp"/>

                    <ImageView
                        android:id="@+id/product_add_planned_list"
                        android:layout_width="30dp"
                        android:layout_height="44dp"
                        android:src="@drawable/add_in_cart_layout"
                        android:elevation="4dp"/>

                </LinearLayout>

            </RelativeLayout>




        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
