<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/bottom_toolbar"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:elevation="20dp"
        android:paddingHorizontal="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:layout_margin="-20dp"
            android:elevation="20dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingHorizontal="4dp">

            <LinearLayout
                android:id="@+id/main_btn"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:layout_marginHorizontal="2dp"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:weightSum=".4">

                <ImageView
                    android:id="@+id/ic_main_view"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="7dp"
                    android:layout_weight=".2"
                    android:src="@drawable/ic_main" />

                <TextView
                    android:id="@+id/main_btn_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".1"
                    android:gravity="center_horizontal"
                    android:padding="-2dp"
                    android:text="@string/nav_bar_main_menu"
                    android:textColor="@color/black"
                    android:textSize="11sp" />

                <ImageView
                    android:id="@+id/main_btn_selected"
                    android:layout_width="26dp"
                    android:layout_height="8dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight=".1"
                    android:background="@drawable/bottom_bar_item_selected"
                    android:visibility="invisible" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/categories_btn"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="4dp"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:weightSum=".4">

                <ImageView
                    android:id="@+id/ic_categories_view"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="7dp"
                    android:layout_weight=".2"
                    android:src="@drawable/ic_categories" />

                <TextView
                    android:id="@+id/categories_btn_txt"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".1"
                    android:gravity="center_horizontal"
                    android:padding="-2dp"
                    android:text="@string/nav_bar_categories"
                    android:textColor="@color/black"
                    android:textSize="11sp" />

                <ImageView
                    android:id="@+id/categories_btn_selected"
                    android:layout_width="26dp"
                    android:layout_height="8dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight=".1"
                    android:background="@drawable/bottom_bar_item_selected"
                    android:visibility="invisible" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/cart_btn"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="6dp"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:weightSum=".4">


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_gravity="top"
                    android:layout_weight=".2"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/ic_cart_view"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/ic_cart" />

                    <TextView
                        android:id="@+id/items_in_cart"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="top|end"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="4dp"
                        android:background="@drawable/number_above_cart"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        android:visibility="gone" />

                </FrameLayout>

                <TextView
                    android:id="@+id/cart_btn_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".1"
                    android:gravity="center_horizontal"
                    android:padding="-2dp"
                    android:text="@string/nav_bar_Cart"
                    android:textColor="@color/black"
                    android:textSize="11sp" />


                <ImageView
                    android:id="@+id/cart_btn_selected"
                    android:layout_width="26dp"
                    android:layout_height="8dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight=".1"
                    android:background="@drawable/bottom_bar_item_selected"
                    android:visibility="invisible" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/wishlist_btn"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="4dp"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:weightSum=".4">

                <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_gravity="top"
                    android:layout_weight=".2"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/ic_wishlist_view"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/ic_wishlist" />

                    <TextView
                        android:id="@+id/items_in_wishlist"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="top|end"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="9dp"
                        android:background="@drawable/number_above_wishlist_btn"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        android:visibility="gone" />

                </FrameLayout>

                <TextView
                    android:id="@+id/wishlist_btn_txt"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".1"
                    android:gravity="center_horizontal"
                    android:padding="-2dp"
                    android:text="@string/nav_bar_Wishlist"
                    android:textColor="@color/black"
                    android:textSize="11sp" />

                <ImageView
                    android:id="@+id/wishlist_btn_selected"
                    android:layout_width="26dp"
                    android:layout_height="8dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight=".1"
                    android:background="@drawable/bottom_bar_item_selected"
                    android:visibility="invisible" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/planned_btn"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:layout_marginHorizontal="2dp"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:weightSum=".4">

                <ImageView
                    android:id="@+id/ic_planned_view"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="7dp"
                    android:layout_weight=".2"
                    android:src="@drawable/ic_planned" />

                <TextView
                    android:id="@+id/planned_btn_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".1"
                    android:gravity="center_horizontal"
                    android:padding="-2dp"
                    android:text="@string/nav_bar_planned"
                    android:textColor="@color/black"
                    android:textSize="11sp" />

                <ImageView
                    android:id="@+id/planned_btn_selected"
                    android:layout_width="26dp"
                    android:layout_height="8dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight=".1"
                    android:src="@drawable/bottom_bar_item_selected"
                    android:visibility="invisible" />

            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>
</RelativeLayout>