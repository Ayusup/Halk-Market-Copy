<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lighter_white_solid"
    tools:context=".view.fragments.ProductFragment"
    android:clickable="true"
    android:focusable="true"
    android:layout_weight="1">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lighter_white_solid"
        android:orientation="vertical"
        android:paddingHorizontal="12dp"
        android:weightSum="1">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <ImageView
                android:id="@+id/product_lay_back_btn"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_centerVertical="true"
                android:layout_gravity="start"
                android:background="@color/lighter_white_solid"
                android:foreground="?android:attr/selectableItemBackground"
                android:src="@drawable/back_btn_ic" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/product_layout_planned_btn"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="6dp"
                    android:background="@color/lighter_white_solid"
                    android:src="@drawable/ic_calendar" />

                <ImageView
                    android:id="@+id/product_layout_like_btn"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="6dp"
                    android:background="@drawable/favourite_btn" />

            </LinearLayout>


            </RelativeLayout>

        <ImageView
                android:id="@+id/product_image"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:scaleType="center"
                android:layout_weight=".45"
                android:layout_marginVertical="10dp"
                android:src="@drawable/gatorade" />


        <TextView
                android:id="@+id/product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:text="Gatorade"
                android:textColor="@color/color_Accent"
                android:textSize="32sp" />

        <TextView
                android:id="@+id/article"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="4dp"
                android:text="Article: 00000000"
                android:textColor="@color/gray"
                android:textSize="16sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="6dp"
            android:layout_weight=".01">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/price_for_piece_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginBottom="@dimen/price_for_piece_margin"
                        android:text="price for pc"
                        android:textColor="@color/price_for_pc_text_color"
                        android:textSize="16sp"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/product_price_product_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:text="60.00 TMT"
                        android:textColor="@color/color_Accent"
                        android:textSize="16sp"
                        android:layout_weight="1"
                        android:textStyle="bold" />


                </LinearLayout>


                <RelativeLayout
                    android:layout_width="122dp"
                    android:layout_height="44dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true">

                    <TextView
                        android:id="@+id/add_to_cart_product_Layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/add_to_cart_btn_wishlist_layout"
                        android:gravity="center"
                        android:text="@string/add_to_cart"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:visibility="visible" />

                    <LinearLayout
                        android:id="@+id/add_and_take_layout_product_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/product_take_product_layout"
                            android:layout_width="34dp"
                            android:layout_height="45dp"
                            android:src="@drawable/take_in_cart_layout" />

                        <TextView
                            android:id="@+id/product_pieces_product_layout"
                            android:layout_width="48dp"
                            android:layout_height="44dp"
                            android:gravity="center"
                            android:text="1 pc"
                            android:textColor="@color/color_Accent"
                            android:textSize="11sp" />

                        <ImageView
                            android:id="@+id/product_add_product_layout"
                            android:layout_width="34dp"
                            android:layout_height="45dp"
                            android:src="@drawable/add_in_cart_layout" />

                    </LinearLayout>

                </RelativeLayout>

            </RelativeLayout>


        </LinearLayout>



</FrameLayout>