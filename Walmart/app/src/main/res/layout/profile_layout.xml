<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profile_layout"
    tools:context=".view.activities.MainActivity"
    android:background="@color/white_solid">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="100dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"

            android:src="@drawable/walmart" />

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/profile_info_underline"
            android:scrollbars="none">


            <LinearLayout
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/profile_info_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/profile_info_underline"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/hello_user_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginBottom="4dp"
                            android:text="Hello, User"
                            android:textColor="@color/color_Accent"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:text="Your adress"
                            android:textColor="@color/color_Accent"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/user_adress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:text="User adress"
                            android:textColor="@color/color_Accent"
                            android:textSize="16sp"
                            android:textStyle="bold" />


                    </LinearLayout>

                </LinearLayout>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/user_functionality"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="34sp"
                            android:layout_height="34sp"
                            android:layout_margin="5dp"
                            android:src="@drawable/ic_personal_info" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="5dp"
                            android:gravity="center_vertical"
                            android:text="@string/Personal_information"
                            android:textColor="@color/color_Accent"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="34sp"
                            android:layout_height="34sp"
                            android:layout_margin="5dp"
                            android:src="@drawable/ic_my_adress" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="5dp"
                            android:gravity="center_vertical"
                            android:text="@string/My_adresses"
                            android:textColor="@color/color_Accent"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="34sp"
                            android:layout_height="34sp"
                            android:layout_margin="5dp"
                            android:src="@drawable/ic_orders" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="5dp"
                            android:gravity="center_vertical"
                            android:text="@string/Orders"
                            android:textColor="@color/color_Accent"
                            android:textSize="16sp" />

                    </LinearLayout>


                </androidx.appcompat.widget.LinearLayoutCompat>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="34sp"
                        android:layout_height="34sp"
                        android:layout_margin="5dp"
                        android:src="@drawable/ic_feedback" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="5dp"
                        android:gravity="center_vertical"
                        android:text="@string/Feedback"
                        android:textColor="@color/color_Accent"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="34sp"
                        android:layout_height="34sp"
                        android:layout_margin="5dp"
                        android:src="@drawable/ic_faq" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="5dp"
                        android:gravity="center_vertical"
                        android:text="@string/FAQ"
                        android:textColor="@color/color_Accent"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="34sp"
                        android:layout_height="34sp"
                        android:layout_margin="5dp"
                        android:src="@drawable/ic_delivery_and_payment_terms" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="5dp"
                        android:gravity="center_vertical"
                        android:text="@string/Delivery_and_payment_terms"
                        android:textColor="@color/color_Accent"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/display_language"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="34sp"
                        android:layout_height="34sp"
                        android:layout_margin="5dp"
                        android:src="@drawable/ic_language" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="5dp"
                        android:gravity="center_vertical"
                        android:text="@string/display_language"
                        android:textColor="@color/color_Accent"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="34sp"
                        android:layout_height="34sp"
                        android:layout_margin="5dp"
                        android:src="@drawable/ic_about_us" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="5dp"
                        android:gravity="center_vertical"
                        android:text="@string/About_us"
                        android:textColor="@color/color_Accent"
                        android:textSize="16sp" />


                </LinearLayout>

            </LinearLayout>

        </ScrollView>




    </LinearLayout>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_alignParentBottom="true">

    <LinearLayout
        android:id="@+id/logout_btn"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:layout_width="34sp"
            android:layout_height="34sp"
            android:layout_margin="5dp"
            android:src="@drawable/ic_about_us" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:gravity="center_vertical"
            android:text="Logout"
            android:textColor="@color/color_Accent"
            android:textSize="16sp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/login_register_lay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/login_btn"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="34sp"
                android:layout_height="34sp"
                android:layout_margin="5dp"
                android:src="@drawable/log_in" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:gravity="center_vertical"
                android:text="Login"
                android:textColor="@color/color_Accent"
                android:textSize="16sp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/registration"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="34sp"
                android:layout_height="34sp"
                android:layout_margin="5dp"
                android:src="@drawable/registration" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:gravity="center_vertical"
                android:text="Registration"
                android:textColor="@color/color_Accent"
                android:textSize="16sp" />


        </LinearLayout>

    </LinearLayout>


</LinearLayout>



</RelativeLayout>