<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/language_fragment"
    tools:context=".view.fragments.DisplayLanguageFragment">


    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/display_language_lay"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@color/lighter_white_solid"
        android:orientation="vertical">



        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="top"
            android:background="@color/white"
            app:layout_scrollFlags="enterAlways">

            <ImageView
                android:id="@+id/display_language_back_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/back_btn_ic"
                android:paddingHorizontal="4dp"
                android:layout_marginStart="4dp"/>

            <TextView
                android:id="@+id/display_language_topBar_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/display_language"
                android:textColor="@color/color_Accent"
                android:textSize="24sp"
                android:gravity="center"
                android:fontFamily="@font/montserrat_medium"
                android:layout_gravity="center_horizontal" />

        </androidx.appcompat.widget.Toolbar>



        <RelativeLayout
            android:id="@+id/change_lang_tk"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/display_language_layout_underlines">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginStart="4dp"
                android:gravity="center_vertical"
                android:text="Turkmen"
                android:textColor="@color/color_Accent"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/turkmen_check"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_check_display_language_layout"
                android:visibility="gone"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/change_lang_ru"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/display_language_layout_underlines">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginStart="4dp"
                android:gravity="center_vertical"
                android:text="Russian"
                android:textColor="@color/color_Accent"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/russian_check"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_check_display_language_layout"
                android:visibility="gone"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/change_lang_en"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginStart="4dp"
                android:gravity="center_vertical"
                android:text="English"
                android:textColor="@color/color_Accent"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/english_check"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_check_display_language_layout"
                android:visibility="gone"/>

        </RelativeLayout>




    </LinearLayout>

</FrameLayout>